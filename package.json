{
  "name": "reonic-assignment",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "simulation": "cd packages/simulation && python main.py",
    "test": "pnpm --filter \"*\" test && cd packages/simulation && pytest"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=8.0.0"
  }
}
